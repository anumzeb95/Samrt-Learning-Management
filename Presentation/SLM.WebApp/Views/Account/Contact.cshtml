@{
    Layout = "_Layout1";
}
@model SLM.Bussiness.Models.UserModel

@{
    ViewData["Title"] = "Account";
}

<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="css/style.css">

<div class="main">
    <h3 style="margin-top:50px;">Contact Us</h3>
    <br />
    
    <h5>Don't worry! You can get in touch with us anytime using the contact information below.</h5>
    <br />

    <div class="container" style="margin-left:22px; ">

        <div class="row">

            <div class="col-sm-7">
                <div class="row">
                    <div class="col-4 col-sm-2 ">
                        <label for="Email" style="font-size: 14px;" class="Email"><b>Email:</b></label><br>

                        <label style="font-size: 14px;" for="contact" class="form-label">
                            <b>Conact:</b>
                        </label><br>

                        <label style="font-size: 14px;" for="address"><b>Address:</b></label><br>
                    </div>

                    <div class="col-7 col-sm-7 position-relative">
                        <div>
                            <input style="width: 200%; height: 30px; color:blue;" type="text" readonly class="form-control-plaintext" id="Email" value="support@slm.com">
                        </div>

                        <div>
                            <input style="width: 200%; height: 30px;" type="text" readonly class="form-control-plaintext" id="contact" value="04-84792839">
                        </div>

                        <div>
                            <input style="width: 200%; height: 30px;" type="text" readonly class="form-control-plaintext" id="address" value="Smart Learning Management.Ltd, Galway Technology Park, NewYork, H91 E309, USA."><br>
                        </div>


                    </div>
                </div>
            </div>





            <div class="col-sm-2 position-relative">
                <!-- Image upload -->

                <a class="brand">
                    <img src="~/images/contact.jpg"
                         height="400px" width="400px" />
                </a>
            </div>


        </div>
    </div>


</div>







<style>
    .main {
        margin-left: 160px; /* Same as the width of the sidenav */
        font-size: 28px; /* Increased text to enable scrolling */
        padding: 0px 10px;
    }
</style>



<script src="js/jquery.min.js"></script>
<script src="js/popper.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/main.js"></script>