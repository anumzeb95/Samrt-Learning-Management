@model SLM.WebApp.Models.UserModel

@{
    ViewData["Title"] = "Login";
}
<br />
<br />
<h3 style="text-align:left; text-justify:auto; font-size:28px;"><b>Login Here!</b></h3>
<br />

<div class="row">
    <div class="col-md-6">
        <img src="~/images/login.png" class="card-img-top" style="padding-top:5px; width=10px; height=355px;" alt="...">
    </div>

    <div class="col-md-6">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <br/>
           <br/>
           <br/>
                <div class="form-group">
                    <label asp-for="Designation" class="control-label"></label>

                    <div class="form-check">
                        <input asp-for="Designation" class="form-check-input" type="checkbox" name="gridcheckbox" id="gridcheckbox1" 
                        onclick="handleChange(this);"
                               value="1" checked>
                        <span asp-validation-for="Designation" class="text-danger"></span>
                        <label class="form-check-label" for="gridcheckbox1">
                            Teacher
                        </label>
                    </div>
                    <div class="form-check">
                        <input asp-for="Designation" class="form-check-input" type="checkbox" name="gridcheckbox" id="gridcheckbox2" 
                        onclick="handleChange(this);"
                               value="2">
                        <span asp-validation-for="Designation" class="text-danger"></span>
                        <label class="form-check-label" for="gridcheckbox2">
                            Student
                        </label>
                    </div>
                   
                </div>

                <script>
                    function handleChange(myCheckbox) {
                        const emailDiv = document.getElementById('emailDiv', 'pwdDiv');
                        if (myCheckbox.value == "2") {
                            emailDiv.style.display = '';
                            pwdDiv.style.display = '';
                        }
                        else (myCheckbox.value == "1") {
                            emailDiv.style.display = '';
                            pwdDiv.style.display = '';
                        }

                    }

                </script>

<br />
<br /><br />

            <div class="form-group">
                <label asp-for="Email" for="emailDiv" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger" id="emailDiv"></span>
            </div>

            <div class="form-group">
                    <label asp-for="Password" class="control-label" for="pwdDiv"></label>
                <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger" id="pwdDiv"></span>
            </div>
           
        
            <br />
           
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                </label>
            </div>
                
            <div class="form-group gap-2 d-md-flex justify-content-md-end">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</div>
