@{
    Layout = "_Layout1";
}


@model SLM.Bussiness.Models.LectureModel
@{
    ViewData["Title"] = "Create";
}

<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="css/style.css">



<div class="main">
   
    <h2 style="margin-top:50px;">Create</h2>


<h3>Add Lecture:</h3>
<br/>
<hr />
<div class="row">
    <div class="col-md-4">
            <form asp-action="Create" method="POST" enctype="multipart/form-data" asp-controller="Lecture" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" type="hidden" />

            <div class="col-sm-2 position-relative">
                <!-- Image upload -->

                <a class="brand">
                    <img class="rounded mx-auto d-block" src="~/images/dt.jpg"
                         height="400px" width="800px" />
                </a>
            </div>
            <br />

            <div class="form-group">
                <label asp-for="LectureName" class="control-label"></label>
                <input asp-for="LectureName" class="form-control" />
                <span asp-validation-for="LectureName" class="text-danger"></span>

                <label asp-for="LectureDescription" class="control-label"></label>
                <input asp-for="LectureDescription" class="form-control" />
                <span asp-validation-for="LectureDescription" class="text-danger"></span>

                <label asp-for="CourseId" class="control-label"></label>
                <input asp-for="CourseId" class="form-control" />
                <span asp-validation-for="CourseId" class="text-danger"></span>


                <label asp-for="LectureURL" class="control-label"></label>
                    <input asp-for="LectureURL" class="form-control" type="file" name="files" multiple />
                <span asp-validation-for="LectureURL" class="text-danger"></span>

                    <div class="form-group">
                        <input type="submit" value="Upload"/>
                </div>

            </div><br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" href="/Lecture/Index"/>
            </div><br />
            <div class="form-group">
                <input type="submit" asp-controller="Lecture" asp-action="Index" value="Back" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

</div>

<style>
    .main {
        margin-left: 160px; /* Same as the width of the sidenav */
        font-size: 16px; /* Increased text to enable scrolling */
        padding: 0px 10px;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script src="js/jquery.min.js"></script>
<script src="js/popper.js"></script>
<script src="js/bootstrap.min.js"></script>
<script src="js/main.js"></script>
