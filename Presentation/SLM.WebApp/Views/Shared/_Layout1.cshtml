<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Smart Learning Managemenet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SLM.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/images/logo.png" 
                    height="60px" width="60px"/></a>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><b>Smart Learning Managemenet</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
               


                <div >
                    label 
                </div>

                <div>
                    <button class="btn btn-warning btn-sm  active" Text="Submit" Width="60px" OnClick="btnSubmit_Click">
                        Logout
                    </button>
                 
                    @*<button class="btn btn-warning btn-sm  active" Text="Submit" Width="29px" OnClick="btnSubmit_Click">
                        Register
                    </button>*@

                    <div class="divider" />
                </div>


              
            </div>
        </nav>

        <div class="border-end bg-white" id="sidebar-wrapper">
            
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" src="~/images/home.png" href="~/Home/Index">Home</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" src="~/images/dashboard.png" href="#!">Dashboard</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" src="~/images/profile.png" href="#!">Profile</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" src="~/images/lec.png" href="#!">Lecture</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" src="~/images/abouti.png" href="#!">About</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" src="~/images/Contact.png" href="#!">Contact</a>
                
            
            </div>
        </div>

        <style>
            .dropdown-menu {
                position: relative;
            }

                .dropdown-menu .dropdown-menu {
                    top: 0;
                    left: 100%;
                    margin-top: -1px;
                }

                .navbar ul li a:hover
                {
                background: #FEBE00;
                mix-blend-mode:lighten;
                color: transparent;
               
                
                    color: #ffff;

                }

            .navbar ul li ul
            {
                position:absolute;
                left:0;
                width: 500px;
                background:#212121;
            }
            
            .navbar ul li ul li
            {
                width:60%;
                border-top: 1px solid rgba(0,0,0,.1);
            }

            .divider {
                width: 6px;
                height: auto;
                display: inline-block;
            }

            
            
            </style>
    </header>
    
    


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Store-Learining-Managmenet.WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
